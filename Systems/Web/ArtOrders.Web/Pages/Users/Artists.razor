@page "/artists"

@layout MainLayout

@inject IUserService userService

<MudText Typo="Typo.h4" Class="ma-8">Artists</MudText>

<MudContainer Class="pa-8">
    <MudGrid>
        <MudItem xs="2">
            <MudSelect @bind-Value="@_papers" Label="Rows per page" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="10" />
                <MudSelectItem Value="25" />
                <MudSelectItem Value="50" />
                <MudSelectItem Value="100" />
            </MudSelect>
        </MudItem>
        <MudItem xs="10" Class="d-flex flex-column align-center justify-center">
            <MudPagination BoundaryCount="2" MiddleCount="5" Count="22" @bind-Selected="@_page" />
        </MudItem>
        <MudItem xs="12">
            <MudGrid Justify="Justify.FlexStart">
                @for (int i = 0; i < _papers; i++)
                {
                    <MudItem xs="3">
                        <MudCard>
                            <MudCardMedia Image="LocalData/Images/PHGAvatarImage.jpg" Height="200" />
                            <MudCardContent>
                                <MudText Typo="Typo.h6">Я кирпич</MudText>
                            </MudCardContent>
                        </MudCard>
                    </MudItem>
                }
            </MudGrid>
        </MudItem>
        <MudItem xs="2">
            <MudSelect @bind-Value="@_papers" Label="Rows per page" Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="10" />
                <MudSelectItem Value="25" />
                <MudSelectItem Value="50" />
                <MudSelectItem Value="100" />
            </MudSelect>
        </MudItem>
        <MudItem xs="10" Class="d-flex flex-column align-center justify-center">
            <MudPagination BoundaryCount="2" MiddleCount="5" Count="22" @bind-Selected="@_page"/>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    int _papers = 10;
    int _page = 1;
}
